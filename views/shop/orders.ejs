<body>
    <main>
        <% if(orders.length <= 0 ){ %>
        <h2>Nothing Here</h2>  
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                <li> 
                    <h1>#<%= order.id %></h1>    
                    <ul>
                        <% order.products.forEach(item => { %> 
                        <li><%= item.title %> (<%= item.orderItem.quantity %>) </li>    
                        <% })%>
                    </ul>
                </li>
                    <% }) %>

            </ul>
            <% } %>
        </main>
